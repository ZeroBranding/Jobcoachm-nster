{
  "name": "jobcoach-muenster",
  "private": true,
  "version": "1.0.0",
  "description": "JobCoach Münster – Plattform zur Unterstützung bei Online-Anträgen (ALG, Kindergeld, Wohngeld etc.)",
  "license": "MIT",
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "dev": "concurrently -n FRONTEND,BACKEND -c blue,green \"next dev\" \"npm run dev:backend\"",
    "dev:backend": "ts-node --project tsconfig.backend.json src/backend/index.ts",
    "build": "npm run prisma:generate && next build && tsc -p tsconfig.backend.json",
    "start": "concurrently -n FRONTEND,BACKEND -c blue,green \"next start -p 3000\" \"node dist/backend/index.js\"",
    "lint": "next lint && eslint \"src/backend/**/*.{ts,tsx}\"",
    "test": "jest",
    "test:e2e": "playwright test",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:push": "prisma db push",
    "prisma:dev": "prisma migrate dev --name init",
    "prisma:generate": "prisma generate",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "@react-three/drei": "^9.112.6",
    "@react-three/fiber": "^8.16.7",
    "bcrypt": "^5.1.1",
    "cookie": "^0.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "framer-motion": "^11.0.23",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "next": "14.2.5",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.14",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.12",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.15",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.24",
    "@types/supertest": "^2.0.16",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.0.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "postcss": "^8.4.38",
    "prisma": "^5.18.0",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.4.7",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "wait-on": "^7.2.0"
  }
}
