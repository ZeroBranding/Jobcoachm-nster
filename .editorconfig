# EditorConfig für JobCoach Münster
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.{js,ts,jsx,tsx}]
indent_size = 2
quote_type = single

[*.{html,htm}]
indent_size = 2

[*.{css,scss,sass}]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{sh,bash}]
indent_size = 4
end_of_line = lf

[Makefile]
indent_style = tab

[*.py]
indent_size = 4

[*.{xml,svg}]
indent_size = 2

[package.json]
indent_size = 2

[*.conf]
indent_size = 4