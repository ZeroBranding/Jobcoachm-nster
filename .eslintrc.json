{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["next/core-web-vitals", "eslint:recommended"],
  "overrides": [
    {
      "files": ["src/backend/**/*.ts"],
      "parserOptions": { "project": ["./tsconfig.backend.json"] }
    }
    ,
    {
      "files": ["**/*.test.ts", "**/*.spec.ts"],
      "env": { "jest": true, "node": true }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off"
  }
}
