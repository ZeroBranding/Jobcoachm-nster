# .htaccess für Dein Jobcoach-Münster
# Maximale SEO & Performance Optimierung

# ========================================
# SICHERHEIT
# ========================================

# Verzeichnis-Browsing deaktivieren
Options -Indexes

# Server-Signatur ausblenden
ServerSignature Off

# X-Powered-By Header entfernen
Header unset X-Powered-By

# Clickjacking-Schutz
Header always append X-Frame-Options SAMEORIGIN

# XSS-Schutz
Header set X-XSS-Protection "1; mode=block"

# Content-Type-Sniffing verhindern
Header set X-Content-Type-Options "nosniff"

# ========================================
# PERFORMANCE OPTIMIERUNG
# ========================================

# GZIP Kompression aktivieren
<IfModule mod_deflate.c>
    # Compress HTML, CSS, JavaScript, Text, XML and fonts
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/ld+json
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/vnd.ms-fontobject
    AddOutputFilterByType DEFLATE application/x-font
    AddOutputFilterByType DEFLATE application/x-font-opentype
    AddOutputFilterByType DEFLATE application/x-font-otf
    AddOutputFilterByType DEFLATE application/x-font-truetype
    AddOutputFilterByType DEFLATE application/x-font-ttf
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE font/opentype
    AddOutputFilterByType DEFLATE font/otf
    AddOutputFilterByType DEFLATE font/ttf
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE image/x-icon
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml
</IfModule>

# Browser Caching aktivieren
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Standard
    ExpiresDefault "access plus 1 month"
    
    # HTML
    ExpiresByType text/html "access plus 1 hour"
    
    # CSS
    ExpiresByType text/css "access plus 1 year"
    
    # JavaScript
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    
    # Bilder
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType image/ico "access plus 1 year"
    
    # Fonts
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    
    # Media
    ExpiresByType audio/ogg "access plus 1 year"
    ExpiresByType video/mp4 "access plus 1 year"
    ExpiresByType video/ogg "access plus 1 year"
    ExpiresByType video/webm "access plus 1 year"
</IfModule>

# Cache-Control Headers
<IfModule mod_headers.c>
    # 1 Jahr für Bilder
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # 1 Jahr für CSS und JS
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # 1 Stunde für HTML
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
    </FilesMatch>
    
    # Fonts
    <FilesMatch "\.(ttf|ttc|otf|eot|woff|woff2)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
</IfModule>

# ========================================
# SEO OPTIMIERUNG
# ========================================

# WWW zu Non-WWW Redirect (oder umgekehrt - konsistent bleiben!)
RewriteEngine On
RewriteCond %{HTTP_HOST} ^www\.dein-jobcoach-muenster\.de$ [NC]
RewriteRule ^(.*)$ https://dein-jobcoach-muenster.de/$1 [R=301,L]

# HTTP zu HTTPS Redirect
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://dein-jobcoach-muenster.de/$1 [R=301,L]

# Trailing Slash entfernen
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} (.+)/$
RewriteRule ^ %1 [R=301,L]

# Clean URLs (ohne .html)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+)$ $1.html [L]

# 301 Redirects für alte URLs (falls vorhanden)
Redirect 301 /alte-seite https://dein-jobcoach-muenster.de/neue-seite

# ========================================
# CUSTOM ERROR PAGES
# ========================================

ErrorDocument 404 /404.html
ErrorDocument 403 /403.html
ErrorDocument 500 /500.html

# ========================================
# GESCHWINDIGKEIT
# ========================================

# ETags deaktivieren
FileETag None
Header unset ETag

# Keep-Alive aktivieren
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>

# ========================================
# HOTLINK PROTECTION
# ========================================

RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?dein-jobcoach-muenster\.de [NC]
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?google\. [NC]
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?bing\. [NC]
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?facebook\. [NC]
RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [F,L]

# ========================================
# SPAM BOTS BLOCKIEREN
# ========================================

# Bad Bots blockieren
RewriteCond %{HTTP_USER_AGENT} ^.*(Baiduspider|360Spider|Sogou|Yandex).*$ [NC]
RewriteRule .* - [F,L]

# ========================================
# SITEMAP LOCATION
# ========================================

# Sitemap Regel
RewriteRule ^sitemap\.xml$ /sitemap.xml [L]

# ========================================
# MOBILE OPTIMIERUNG
# ========================================

# Vary Header für Mobile
<IfModule mod_headers.c>
    Header append Vary User-Agent
</IfModule>

# ========================================
# CORE WEB VITALS OPTIMIERUNG
# ========================================

# Preconnect zu wichtigen Domains
<IfModule mod_headers.c>
    Header set Link "<https://fonts.googleapis.com>; rel=preconnect"
    Header set Link "<https://fonts.gstatic.com>; rel=preconnect; crossorigin"
</IfModule>

# ========================================
# ZUSÄTZLICHE SICHERHEIT
# ========================================

# PHP im Upload-Verzeichnis deaktivieren
<Directory "/workspace/uploads">
    <Files *.php>
        Deny from all
    </Files>
</Directory>

# Sensible Dateien schützen
<FilesMatch "^\.htaccess|\.htpasswd|\.env|composer\.(json|lock)|package\.(json|lock)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# ========================================
# ENDE DER KONFIGURATION
# ========================================